<!-- Slider main container -->
<div class="swiper">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
        <!-- Slides -->
        <div class="swiper-slide">
            <div class="contenido">
                <img
                    src="../../public/Proyectos/pixelMetroid.png"
                    alt="PXMetroid project"
                />
                <div class="content">
                    <span>Pixel Metroid 2D</span><br>
                    <span>
                        <u>Descripción</u>: Juego de Unity basado en la saga de videojuegos Metroid
                    </span><br>
                    <span><u>Estado</u>: Terminado</span>
                    <span><u>Repositorio</u>: <a href="https://github.com/AlejandroAlbaCastillo/PixelMetroid2D.git" target="_blank" rel="noreferrer">Aquí</a></span>
                </div>
            </div>
        </div>
        <div class="swiper-slide">
            <div class="contenido">
                <img
                    src="../../public/Proyectos/Sportify.png"
                    alt="Sportify project"
                />
                <div class="content">
                    <span>Sportify</span><br>
                    <span>
                        <u>Descripción</u>: Aplicación de escritorio para reservar las pistas de un
                        complejo deportivo
                    </span><br>
                    <span><u>Estado</u>: En desarrollo</span>
                    <span><u>Repositorio</u>: <a href="https://github.com/AlejandroAlbaCastillo/TFGAlejandroAlbaCastillo/tree/dev" target="_blank" rel="noreferrer">Aquí</a></span>
                </div>
            </div>
        </div>
    </div>
    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>

    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>

    <!-- If we need scrollbar -->
    <div class="swiper-scrollbar"></div>
</div>

<style>
    .swiper {
        width: 100%;
        height: 300px;
        background-color: #cde8e5;
        border-radius: 30px;
    }
    /* .swiper-wrapper{
        padding-inline: 3rem;
    } */

    .swiper-slide{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    
    .contenido {
        display: flex;
        align-items: center;
        justify-content: start;
        gap: 1rem;
        width: 80%;
    }
    .content{
        display: flex;
        flex-direction: column;
        gap: .5rem;
    }
    .content span:first-child{
        width: calc();
        border-bottom: 2px solid black;
        font-size: 25px;
        font-weight: bold;
    }
    .swiper img {
        height: 200px;
        border-radius: 50%;
    }
</style>

<script>
    import Swiper from "swiper";
    import { Navigation, Pagination, Autoplay } from "swiper/modules";
    // import Swiper and modules styles
    import "swiper/css";
    import "swiper/css/navigation";
    import "swiper/css/pagination";
    import "swiper/css/autoplay";

    const swiper = new Swiper(".swiper", {
        // Optional parameters
        direction: "horizontal",
        loop: true,
        modules: [Navigation, Pagination, Autoplay],
        // If we need pagination
        pagination: {
            el: ".swiper-pagination",
        },

        // Navigation arrows
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
        // autoplay: {
        //     delay: 5000,
        // },
    });
</script>
