const images = await Astro.glob('/public/*.{png,jpeg}');
---

<header role="banner" aria-label="Cabecera de sitio">
    <div class="first-part">
        <div><img src={logo.src} alt="imagen" /></div>
        <h1>AlejandroAC</h1>
        <div class="rrss">
            <a href="https://www.linkedin.com/in/alejandro-alba-castillo-69583b186/" target="_blank" rel="noreferrer"><Image src={linkedin} alt='Linkedin'/></a>
            <a href="https://github.com/AlejandroAlbaCastillo" target="_blank" rel="noreferrer"><Image src={github} alt='Git Hub'/></a>
            <a href="https://mail.google.com/mail/u/0/#inbox?compose=GTvVlcSDbFRWFQCdTCBZLpMCRRcmhRTKBmHvnxxTLQtLmrhBnBXQhgnGnWWPDCsBXxVVvdHDFjhxC" target="_blank" rel="noreferrer"><Image src={gmail} alt='Correo electrÃ³nico'/></a>
        </div>
    </div>
    <nav class="navegator">
        <ul>
            <li><a href="#sobremi">Sobre mi</a></li>
            <li><a href="#proyectos">Proyectos</a></li>
            <li><a href="#estudios">Estudios</a></li>
            <li><a href="#cv">CV</a></li>
        </ul>
    </nav>
</header>

<style>
    header{
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 0;
        z-index: 5;
    }
    .rrss{
        display:flex;
        flex-direction: row;
        justify-content: center;
        gap: 1rem;
        margin-right: 2rem;

    }
    .first-part {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        background-color: #CDE8E5;
        margin-bottom: 0 ;

        /* display: grid;
        grid-template-rows: 80% 20%;
        grid-template-columns: 30% 40% 30%;
         */
    }
    .first-part *{
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        
    }
    .first-part div img{ 
        width:100px;
    }
    .first-part div a img{ 
        width:2rem;
    }
    .navegator{
        background-color: #7AB2B2;
        margin-top: 0;
       
    }
    .navegator ul{
        display:flex;
        flex-direction: row;
        justify-content: center;
        
    }
    .navegator ul li{
        list-style: none;
        border-left: black 2px solid;
        padding-inline: 10px;
    }
    .navegator ul li:last-child{
        border-right: black 2px solid;
    }
    .navegator ul li a{
        text-decoration: none;
        color: black;
    }
    .navegator ul li:hover{
        cursor: pointer;
        text-decoration: underline;
    }
@media (max-width: 500px){
    .first-part{
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        gap: 0;
    }
    .rrss{
        margin-right: 0;
    }
    .first-part h1{
        display: none;
    }
}
</style>
