---


import logo from '../../public/logo-black.png';
---

<header role="banner" aria-label="Cabecera de sitio">
    <div class="first-part">
        <div><img src={logo.src} alt="imagen" /></div>
        <h1>AlejandroAC</h1>
        <div>RRSS</div>
    </div>
    <nav class="navegator">
        <ul>
            <li><a href="#sobremi">Sobre mi</a></li>
            <li><a href="#proyectos">Proyectos</a></li>
            <li><a href="#estudios">Estudios</a></li>
            <li><a href="#cv">CV</a></li>
        </ul>
    </nav>
</header>

<style>
    header{
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 0;
    }
    .first-part {
        display: grid;
        grid-template-rows: 80% 20%;
        grid-template-columns: 30% 40% 30%;
        background-color: #CDE8E5;
        margin-bottom: 0 ;
    }
    .first-part *{
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        
    }
    .first-part div img{ 
        width:100px;
    }
    .navegator{
        background-color: #EEF7FF;
        margin-top: 0;
       
    }
    .navegator ul{
        display:flex;
        flex-direction: row;
        justify-content: center;
        
    }
    .navegator ul li{
        list-style: none;
        border-inline: black 1px solid;
        padding-inline: 10px;
    }
    .navegator ul li a{
        text-decoration: none;
        color: black;
    }
    .navegator ul li:hover{
        cursor: pointer;
        text-decoration: underline;
    }

</style>
